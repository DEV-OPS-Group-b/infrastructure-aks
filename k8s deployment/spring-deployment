apiVersion: v1
items:
  - apiVersion: v1
    kind: Service
    metadata:
      labels:
        app: mongo
      name: mongo
    spec:
      ports:
        - name: "27017"
          port: 27017
          targetPort: 27017
      selector:
        app: mongo
  - apiVersion: v1
    kind: Service
    metadata:
      labels:
        app: spring
      name: spring
    spec:
      ports:
        - name: "8080"
          port: 8080
          targetPort: 8080
      selector:
        app: spring
  - apiVersion: networking.k8s.io/v1
    kind: NetworkPolicy
    metadata:
      name: deployment-isolated-network
    spec:
      ingress:
        - from:
            - podSelector:
                matchLabels:
                  deployment-isolated-network: "true"
      podSelector:
        matchLabels:
          deployment-isolated-network: "true"
  - apiVersion: apps/v1
    kind: Deployment
    metadata:
      labels:
        app: mongo
      name: mongo
    spec:
      replicas: 1
      selector:
        matchLabels:
          app: mongo
      strategy: { }
      template:
        metadata:
          labels:
            deployment-isolated-network: "true"
            app: mongo
        spec:
          containers:
            - image: mongo
              name: mongo
              ports:
                - containerPort: 27017
              resources: { }
          restartPolicy: Always
  - apiVersion: apps/v1
    kind: Deployment
    metadata:
      labels:
        app: spring
      name: spring
    spec:
      replicas: 1
      selector:
        matchLabels:
          app: spring # this will manage any pod template that has this label
      minReadySeconds: 10  # wait 10 seconds to make sure that the container does not crash before direct traffic to it
      strategy:
        type: RollingUpdate
        rollingUpdate:
          maxUnavailable: 0
          maxSurge: 1
      template:
        metadata:
          labels:
            deployment-isolated-network: "true"
            app: spring  # the label should match what we have in the deployment spec selector
        spec:
          terminationGracePeriodSeconds: 1
          containers:
            - image: fadidasus/spring-mini-twit-backend:2
              name: spring-backend
              imagePullPolicy: Always
              ports:
                - containerPort: 8080
              resources:
                limits:
                  cpu: 2000m # 2000 milicpu
                  memory: 1600Mi # 1600 MB
              livenessProbe:
                httpGet:
                  path: /actuator/health/liveness
                  port: 8080
                initialDelaySeconds: 15
                periodSeconds: 3
                failureThreshold: 1
              readinessProbe:
                httpGet:
                  path: /actuator/health/readiness
                  port: 8080
                initialDelaySeconds: 15
                periodSeconds: 3
                failureThreshold: 1
          restartPolicy: Always
kind: List
metadata: { }


